<div class="container">
  <p id="notice"><%= notice %></p>
  <%= link_to 'Добавить Больницу', new_hospital_path %>
  <h3>Все больницы</h3>

  <table>
    <thead>
      <tr>
        <th colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <% @hospitals.each do |hospital| %>
        <tr>
          <td><%= hospital.id %></td>
          <td><%=  hospital.name %></td>
          <td><%= link_to 'Редактировать', edit_hospital_path(hospital) %>
          <%= link_to 'Удалить', hospital_path(hospital), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to 'Все врачи', '/doctors' %>
</div>